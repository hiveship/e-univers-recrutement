
<div class="page-header">
    <h2><center>Nouvel utilisateur</center></h2>
</div>

<%= form_for [:admin, @user] do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "erreur") %></h2>

            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="field">
        <%= f.label :status , "Statut"%><br>
        <%= f.select(:status, options_for_select([['Recruteur', User::RECRUTEUR],['Manager', User::MANAGER],['Administrateur', User::ADMIN]])) %>
    </div>
    <div class="field">
        <%= f.label :login , "Login"%><br>
        <%= f.text_field :login %>
    </div>
    <div class="field">
        <%= f.label :mail ,"E-mail" %><br>
        <%= f.text_field :mail %>
    </div>

    <div class="actions">
        <%= f.submit "CrÃ©er utilisateur" %>
    </div>
<% end %>
