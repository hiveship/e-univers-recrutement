<h1>Liste des comptes</h1>

<%= link_to 'Nouveau utilisateur', new_admin_user_path, class: "btn pull-right" %>
<br>
<table class="table table-hover">
    <thead>
    <tr>
        <th>Login</th>
        <th>Email</th>
        <th>Statut</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>

    <tbody>

    <% @users.each do |user| %>

        <% if @me == user %>
            <tr class="info">
        <% end %>
        <td><%= user.login %></td>
        <td><%= user.mail %></td>

        <% if user.status == User::ADMIN %>
            <td>
                Administrateur
            </td>
        <% elsif user.status == User::RECRUTEUR%>
            <td>
                Recruteur
            </td>
        <% else %>
            <td>
                Manager
            </td>
        <% end %>

        <td><i class="icon-pencil"></i><%= link_to 'Edit', edit_admin_user_path(user), method: :get %></td>
        <td>
            <i class="icon-remove-sign"></i> <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
        <td><i class="icon-repeat"></i> <%= link_to("Reset password", reset_password_admin_user_path(user), method: :post) %>
        </td>
        <% if user.state == User::ACTIVATE %>
            <td>
                <i class="icon-eye-open"></i>
                <%= link_to("Desactiver compte", deactivate_admin_user_path(user), method: :post) %>
            </td>
        <% else %>
            <td>
                <i class="icon-eye-close"></i>
                <%= link_to("Activer compte", activate_admin_user_path(user), method: :post) %>
            </td>
        <% end %>
        </tr>
    <% end %>

    </tbody>

</table>