<h1>New session</h1>

<%= form_for [:admin, @session] do |f| %>
    <% if @session.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:</h2>

            <ul>
                <% @session.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :beginDate %><br>
        <%= f.date_select :beginDate %>
    </div>
    <div class="field">
        <%= f.label :endDate %><br>
        <%= f.date_select :endDate %>
    </div>
    <div class="field">
        <%= f.label :state %><br>
        <%= f.text_field :state %>
    </div>
    <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area(:description)%>
    </div>

    <div class="field">
    <select>
        <% Profil.all do |profil|%>
            <option ><%= profil.title %></option>
        <% end %>
    </select>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>


<%= link_to 'Liste des sessions', admin_sessions_path %>
