<div class="page-header">
    <h2><center>Candidature pour la session de recrutement : </center></h2>
    <h3><center><%= Session.find_by(id: params[:id]).title %> </center></h3>
</div>

<%= form_for(@candidature) do |f| %>
    <% if @candidature.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@candidature.errors.count, "error") %> prohibited this candidature from being saved:</h2>

            <ul>
                <% @candidature.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :pseudo %><br>
        <%= f.text_field :pseudo %>
    </div>
    <div class="field">
        <%= f.label :mail %><br>
        <%= f.text_field :mail %>
    </div>
    <div class="field">
        <%= f.label :motivation %><br>
        <%= f.text_area :motivation , :size => "5x7" , :class => "span8"%>
    </div>
    <div class="field">
        <%= f.label :bornDate %><br>
        <%= f.date_select :bornDate %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
